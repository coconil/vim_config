{
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"rootPatterns": [
				"compile_flags.txt",
				"compile_commands.json"
			],
			"filetypes": [
				"c",
				"cpp",
				"objc",
				"objcpp"
			]
		},
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cc",
				"cpp",
				"c++",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		}
	},
	"list.insertMappings": {
		"<C-n>": "normal:j",
		"<C-p>": "normal:k",
	},
	"list.normalMappings": {
		"q": "do:exit",
	},
	"suggest.noselect": false,
	"suggest.enablePreselect": true,
  "coc.preferences.colorSupport": true,
  "cSpell.userWords": [
    "ATCMD",
    "BEIDOU",
    "EXTI",
    "GLONASS",
    "GNSS",
    "GPIO",
    "GPIOA",
    "GPIOB",
    "HWCONTROL",
    "IMES",
    "INRTCM",
    "INUBX",
    "MSGPP",
    "NAVSPG",
    "NVIC",
    "Nmea",
    "OUTRTCM",
    "OUTUBX",
    "QZSS",
    "RTCM",
    "RXNE",
    "SBAS",
    "SURVEYIN",
    "SVIN",
    "Soln",
    "TMODE",
    "UBLOX",
    "USART",
    "azim",
    "comms",
    "dmarx",
    "dmatx",
    "muti",
    "oled",
    "rpos",
    "wpos"
  ],
  "explorer.keyMappings.global": {
    "i": false, // cancel default mapkey
    "<cr>":  [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "l": ["expandable?", "cd", "open"],
    "h": "gotoParent",
    "J": ["toggleSelection", "nodeNext"],
    "K": ["toggleSelection", "nodePrev"],
    "gl": "expandRecursive",
    "gh": "collapseRecursive",
    "s": "open:split",
    "S": "open:split:plain",
    "E": "open:vsplit",
    "t": "open:tab",    
    "gp": "preview:labeling",

    "y": "copyFilepath",
    "Y": "copyFilename",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",

    "f": "search",
    "F": "searchRecursive",
  }
}
